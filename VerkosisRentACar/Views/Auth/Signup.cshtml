@model KayıtOlDTO
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex vh-100 align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4">Yeni Kullanıcı Kaydı</h4>
                        <form method="post" asp-action="Signup">
                            <div class="form-group mb-3">
                                <label for="first-name">Ad</label>
                                <input type="text" class="form-control" id="first-name" asp-for="Ad" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="last-name">Soyad</label>
                                <input type="text" class="form-control" id="last-name" asp-for="Soyad" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">E-mail</label>
                                <input type="email" class="form-control" id="email" asp-for="EMail" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="telefon-no">Telefon Numarası</label>
                                <input type="text" class="form-control" id="telefon-no" asp-for="TelefonNo" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Şifre</label>
                                <input type="password" class="form-control" id="password" asp-for="Sifre" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="confirm-password">Şifre Tekrar</label>
                                <input type="password" class="form-control" id="confirm-password" asp-for="SifreTekrar" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


